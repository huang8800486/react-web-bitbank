// 动画渐变
transition(attribute = all, min = 300ms, animation = ease) {
  transition: attribute min animation;
}

// 不换行
no-wrap() {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

// ------ 超出省略 ------
text-overflow() {
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
